<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100, 100) %><br>
                <%= link_to @books.user.name, user_path %>
            </td>
            <td><%= link_to @books.title, book_path %></td>
            <td><%= @books.body %></td>
            <td>
                <% if @books.user_id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(params[:id]), class: "btn btn-success"  %>
                <% end %>
            </td>
            <td>
                <% if @books.user_id == current_user.id %>
                  <%= link_to "Destroy", book_path(params[:id]), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"  %>
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

