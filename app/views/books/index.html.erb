<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-4">

      <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
      <h3>Name</h3>
        <%= @user.name %>
      <h3>Introduction</h3>
        <%= link_to "編集", edit_user_path(current_user.id) %>

      <h1>New book</h1>

        <%= form_with model: @book, url: books_path do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>

          <h4>Opinion</h4>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book' %>
        <% end %>
    </div>


    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>

          <% end %>
      </tbody>
    </div>
  </div>
</div>