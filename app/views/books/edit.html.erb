<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>

  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, placeholder:"本の名前"%>
  
  <label for="inputOpinion">Opinion</label>
  <%= f.text_area :body, placeholder: "感想" %>
  <%= f.submit "Update Book" %>
<% end %>
<%= link_to "Show", book_path(current_user.id) %>
<%= link_to "Back", books_path %>
