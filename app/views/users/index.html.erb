 <%= render 'users/userinfo', book: @book, user: @user %>
 
 
   <div class="col-lg-8">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
         <tr>
          <th>Image</th>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>

          <% end %>
      </tbody>
    </div>